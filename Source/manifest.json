{
	"manifest_version": 2,
	"name": "Conversion",
	"version": "0.5",
	"description": "Converts units on webpages automatically",
	"default_locale": "en",
	"author": "Max Stoiber",
	"homepage_url": "http://mstoiber.com",
	"content_scripts":
	[
		{
			"matches": ["*://*/*"],
			"js": ["content_script.js"],
			"run_at": "document_end"
		}
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"storage"
	]
}

